{% extends "auth/index.html" %}

{% block title %}Authorization{% endblock %}

{% block links %}
    <a href="#" class="go_form r">Registration form <i class="fa fa-angle-double-right" aria-hidden="true"></i></a>
{% endblock %}

{% block form %}
    <form method="POST">
        <input type="text" class="f_in" id="email" placeholder="Email" required>
        <input type="password" class="f_in" id="pass" placeholder="Password" required>
        <button type="submit" class="f_btn">Log in</button>
    </form>
{% endblock %}

{% block link_r %}
    <a href="#" class="forgot">Forgot password?</a>
{% endblock %}
